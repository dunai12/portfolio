include ../blocks/socials
include ../blocks/svg_image

mixin head({bg}= {bg: "portfolio_header"})
    section.head
        +svg_image(bg || "", "head__title", {viewBox: "0 0 1175.495 313.961"})
        .head__top
            .head__socials
                +socials(common.socials, false, 'green')
            .head__burger-wrap
                +svg_image("hamburger", "head__burger")
        .head__content
            if block
                block
        .head__arrow-wrapper
            +svg_image("arrow_down", "arrow-down head__arrow", {viewBox: "0 0 25.18 16.164"})

